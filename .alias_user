function setgcc(){
	if [[ $MSYSTEM == MINGW64 ]]; then
		export MINGW=/e/BmxNg/mingw64 ;
		PATH=$PATH:$MINGW/bin ;
	fi
	if [[ $MSYSTEM == MINGW32 ]]; then
		export MINGW=/e/BmxNg/mingw32 ;
		PATH=$PATH:$MINGW/bin ;
	fi
}

## $1=dir/author
function gitsubmodinit(){
	if [[ ! -d ~/_misrepos ]]; then
		mkdir ~/_misrepos
	fi
	cd ~/_misrepos
	mkdir "$1"
	cd "$1"
	git init
}

## $1=dir/author $2=repo
function gitsubmodadd(){
	cd ~/_misrepos/"$1"
	git submodule add https://github.com/"$1"/"$2".git "$2"
}

## $1=dir/author
function gitsubmodend(){
	cd ~/_misrepos/"$1"
	git commit -m "Updated submodules."
	git remote add origin git@github.com:denise-amiga/"$1".git
	git push -u origin master
}
